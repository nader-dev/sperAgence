<div class="card" style="width: 18rem;">
	{% if property.filename %}
		<img src="{{ vich_uploader_asset(property, 'image') }}" alt="" class="card-img-top" style="width:100%;height:auto;">
	{% endif %}

	<div class="card-body">
		<h5 class="card-title">
			<a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">{{ property.title }}</a>
		</h5>
		<p class="card-text">
			{{ property.surface}}
			m2 -
			{{ property.city }}
			({{ property.postalcode }})</p>
		<div class="text-primary" style="font-size:1rem;font-weight: bold;">
			{{ property.getFormatedPrice }}
			DT
		</div>
	</div>
</div>
