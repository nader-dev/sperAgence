<div class="card" style="width: 18rem;">
	<div class="card-body">
		<h5 class="card-title">
			<a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">{{ property.title }}</a>
		</h5>
		<p class="card-text">
			{{ property.surface}}
			m2 -
			{{ property.city }}
			({{ property.postalcode }})</p>
		<div class="text-primary" style="font-size:1rem;font-weight: bold;">
			{{ property.getFormatedPrice }}
			DT
		</div>
	</div>
</div>
